extends layout

block content
    .row
        .col-md-6.col-md-push-6                        
            != messages()
        .col-md-6.col-md-pull-6
            form.form-horizontal(action="/usuarios/entrar", method="POST")
                fieldset
                    #legend
                        legend #{title}
                    .control-group
                        label.control-label(for="username") Email
                        .controls
                            input#username.form-control(type="text", name="username", placeholder="Email de acesso")
                            p.help-block              
                    .control-group
                        label.control-label(for="password") Senha
                        .controls
                            input#password.form-control(type="password", name="password", placeholder="Informe a Senha")              
                            p.help-block 
                    .control-group
                        .controls
                            button.btn.btn-success.pull-right Entrar
